<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/bgContactInitial"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/baseline_person_24"
        android:gravity="center"
        android:layout_margin="2dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true">

        <TextView
            android:id="@+id/contactInitial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="#282525"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nomContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom du Contact"
            android:textColor="#D3C9C9"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/numeroContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numéro de téléphone"
            android:textColor="#D3C9C9"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="boutton"
        android:padding="8dp"
        android:src="@drawable/baseline_more_vert_24" />
</LinearLayout>